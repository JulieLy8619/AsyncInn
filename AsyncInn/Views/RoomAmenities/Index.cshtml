@model IEnumerable<AsyncInn.Models.RoomAmenities>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Room Amenities Management</h1>
<div class="topSectionHybrid">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
</div>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amenities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amenities.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { RoomID = item.RoomID, AmenitiesID = item.AmenitiesID }) |
                @Html.ActionLink("Delete", "Delete", new { RoomID = item.RoomID, AmenitiesID = item.AmenitiesID })
            </td>
        </tr>
        }
    </tbody>
</table>
