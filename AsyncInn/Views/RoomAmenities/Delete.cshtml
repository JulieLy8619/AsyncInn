@model AsyncInn.Models.RoomAmenities

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h1>Delete - Room Amenities</h1>

<div class="SubPages">
<h3>Are you sure you want to delete this?</h3>
    <h4>@*RoomAmenities*@</h4>
    <hr />
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Amenities)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Amenities.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AmenitiesID" />
        <input type="hidden" asp-for="RoomID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
